{% extends "layout.twig" %}
	
{% block head %}
	<link rel="stylesheet" type="text/css" href="static/css/DT_bootstrap.css"/>
	<script type="text/javascript" src="static/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="static/js/DT_bootstrap.js"></script>
{% endblock %}


	
{% block content %}
	
	<style>
	
	.table tbody tr:hover td, .table tbody tr:hover th {
    background: rgb(197, 232, 255);
	}
	</style>

<script type="text/javascript">
    $(function() {
        
        table = $('#items').dataTable({
            "aoColumns": [
                // ID
                { },
                // Email
                { },
                // Name
                { },
                // Actions
                { "bSortable": false, "bSearchable": false }
            ],
            //"bFilter": false,
            "aaSorting": [
                [0, 'asc']
            ],
            "bStateSave": true,
            "bAutoWidth": false,
        });
        
         $("#items").on("click", ".borrarbtn", function(event) {
            event.preventDefault();
            var nRow = $(this).parents('tr')[0];
            aData = table.fnGetData(nRow);
                             
            $("#nameDel").val(aData[1]);
            $("#emailDel").val(aData[2]);
            
            $("#borrarConfirmar").click(function(event) {
            	event.preventDefault();
            	
            	var idUser = aData[0];
 	
	            postData = {
	                    id: idUser
	                                        
	            }
	            
	            $.post('_ajax/deleteUser.php', postData, function(data) {
	                if (data)
	                {
	                	json = JSON.parse(data);
				        
	                    if (json == "y"){
	                    	table.fnDeleteRow(aData);
	                    	$("#alertSuccess").css("display", "block");
	                    } else {
	                    	$("#alertError").css("display", "block");
	                    }
	
					}
	            })
            
            })
                        
        })
        
    })
</script>

	
<div class="span9">
	<div class="hero-unit">
	<h1>Gestión de usuarios</h1>
	<br/>
	<p><a href="/envpanel/user/add" class="btn btn-primary btn-large"><i class="icon-user icon-white"></i> Nuevo usuario</a></p>
	<br/>
	<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-hover" id="items">
            <thead>
            <tr>
                <th class="center">ID</th>
                <th class="left">Nombre</th>
                <th class="left">Email</th>
                <th class="center">Opciones</th>
            </tr>
            </thead>
            <tbody>
               {% for u in myUsers %}
                         <tr class="row-{{ u.id }}" id="row-{{ u.id }}">
                <td class="center">{{ u.id }}</td>
                <td class="left" width="35%">
                    {{ u.name }} {{ u.surname }}
                   
                </td>
                <td class="left" width="35%">{{ u.email }}</td>
                <td class="center options">
                    <a class="btn btn-success" href="/envpanel/user/edit/{{ u.id }}"><i class="icon-edit icon-white"></i></a>
                    <a href="#modalBorrar" class="btn btn-danger borrarbtn" data-toggle="modal" id="delete-{{ u.id }}"><i class="icon-trash icon-white"></i></a>
                </td>
            </tr>
                {% endfor %}
            </tbody>
        </table>

	</div>
</div><!--/span-->

    <!-- Ventana Modal de Borrar "#modalBorrar" -->
            <div id="modalBorrar" class="modal hide fade in" style="display: none; ">  
                <div class="modal-header">  
                    <a class="close" data-dismiss="modal">×</a>  
                    <h3>Borrar usuario</h3>  
                </div>  
                <div class="modal-body">
                    <fieldset class="form-horizontal">
                        <div class="control-group">
                            <label for="nameDel" class="control-label required">Nombre:</label>
                            <div class="controls">
                                <input type="text" name="nameDel" id="nameDel" value="" maxlength="100" disabled="disabled">
                            </div>
                        </div>
                        <div class="control-group">
                            <label for="emailDel" class="control-label optional">Email:</label>
                            <div class="controls">
                                <input type="text" name="emailDel" id="emailDel" value="" maxlength="50" disabled="disabled">
                            </div>
                        </div>
                    </fieldset>
                    <h4>Esta a punto de borrar el usuario seleccionado.</h4>
                    <p>¿Desea continuar?</p>
                </div>  
                <div class="modal-footer">
                    <a href="#" class="btn btn-danger" data-dismiss="modal">Cancelar</a> 
                    <a href="#" id="borrarConfirmar" data-dismiss="modal" class="btn btn-success">Confirmar</a>   
                </div>  
            </div>  
{% endblock %}

