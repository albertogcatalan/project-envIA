<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <base href="{{ config.baseHref }}" />
    <title>Project envIA - Panel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

	<link rel="shortcut icon" href="static/img/icon.png" />
	<link rel="apple-touch-icon" href="static/img/icon.png" />
	
    <!-- Le styles -->
    <link type="text/css" rel="stylesheet" href="static/css/bootstrap.min.css" />
    <link type="text/css" rel="stylesheet" href="static/css/style.css" />
    <style type="text/css">
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
      .sidebar-nav {
        padding: 9px 0;
      }

      @media (max-width: 980px) {
        /* Enable use of floated navbar text */
        .navbar-text.pull-right {
          float: none;
          padding-left: 5px;
          padding-right: 5px;
        }
      }
    </style>
    <link type="text/css" rel="stylesheet" href="static/css/bootstrap-responsive.min.css" />
    <script src="static/js/jquery.min.js"></script>
    <script type='text/javascript' src='static/js/bootstrap.min.js'></script>

	{% block head %}{% endblock %}
	
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="../assets/js/html5shiv.js"></script>
    <![endif]-->

   
    
  </head>

  <body>
  	{% block header %}
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a href="/envpanel/" class="brand">Project envIA</a>
          <div class="nav-collapse collapse">
          	
           <ul class="nav">
              <li {%if section == ""%}class="active"{%endif%}><a href="/envpanel/">Inicio</a></li>
              <li {%if section == "simulation"%}class="active"{%endif%} class="dropdown">
			    <a href="#" class="btn- dropdown-toggle" data-toggle="dropdown">
			       Simulaciones
			      <b class="caret"></b>
			    </a>
			    <ul class="dropdown-menu">
			      <li><a href="/envpanel/simulation/list">Listado</a></li>
			      <li class="divider"></li>
			      <li><a href="/envpanel/simulation/add">Nueva</a></li>
				
			    </ul>
			  </li>
			  
			  {% if user.admin %}
			  <li {%if section == "user"%}class="active"{%endif%} class="dropdown">
			    <a href="#" class="btn- dropdown-toggle" data-toggle="dropdown">
			      Usuarios
			      <b class="caret"></b>
			    </a>
			    <ul class="dropdown-menu">
			      <li><a href="/envpanel/user/list">Listado</a></li>
			      <li class="divider"></li>
			      <li><a href="/envpanel/user/add">Nuevo</a></li>
				
			    </ul>
			  </li>
			  {% endif %}
			  
			  <li class="dropdown">
			    <a href="#" class="btn- dropdown-toggle" data-toggle="dropdown">
			      Ayuda
			      <b class="caret"></b>
			    </a>
			    <ul class="dropdown-menu">
			      <li><a href="https://bitbucket.org/abelabs/project-envia/wiki/Home" target="_blank">Wiki</a></li>
			      <li class="divider"></li>
			      <li><a href="https://bitbucket.org/abelabs/project-envia" target="_blank">Repositorio de código</a></li>				
			    </ul>
			  </li>
			  
			  
              </ul>
			  
			  <div class="btn-group pull-right">
				  <a class="btn btn-primary" data-toggle="modal" href="#modalProfile"><i class="icon-user icon-white"></i> {{ user.name }}</a>
				  <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
				  <ul class="dropdown-menu">
				    <li><a href="/">Ir a la página principal</a></li>
			      <li class="divider"></li>
			      <li><a href="/logout/">Cerrar sesión</a></li>
				  </ul>
				</div>
			</div>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>
	{% endblock %}
    <div class="container-fluid">
      <div class="row-fluid">
      
      	{% block lateral %}
	  		{% include "lateral.twig" %}
	  	{% endblock %}
        
        
        {% block content %}
        
        {% endblock %}
        
      </div><!--/row-->
	  
      <hr>
	  
	  {% include "envpanel.modal.profile.twig" %}
	  
      <footer>
        <p>&copy; Project envIA {{ "now"|date('Y') }}</p>
      </footer>

    </div><!--/.fluid-container-->

   

  </body>
</html>
